<%- include('../../partials/header.ejs') %>

<div class="d-flex justify-content-center align-items-center">
    <div class="container shadow p-4 rounded bg-white" style="max-width: 500px;">
        <h2 class="text-center mb-4">Edit User</h2>
        <form action="/customer/edit/<%= users.id %>" method="POST">
            <div class="mb-3">
                <label class="form-label">Full Name</label>
                <input type="text" name="name" class="form-control" value="<%= users.name %>" required />
            </div>
            <div class="mb-3">
                <label class="form-label">Email</label>
                <input type="email" name="email" class="form-control" value="<%= users.email %>" required />
            </div>
            <div class="mb-3">
                <label class="form-label">Role</label>
                <select name="role" class="form-control" required>
                    <option value="User" <% if (users.role==='User') { %> selected <% } %>>User</option>
                    <option value="Admin" <% if (users.role==='Admin') { %> selected <% } %>>Admin</option>
                </select>
            </div>
            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-success">Update</button>
                <a href="/customer" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>





